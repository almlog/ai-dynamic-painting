# AI Dynamic Painting System Environment Variables
# Copy this file to .env and fill in your actual values

# === DATABASE CONFIGURATION ===
DATABASE_URL=sqlite:///./ai_painting.db
DATABASE_SCHEMA=ai_painting

# === API KEYS AND AUTHENTICATION ===
# JWT Secret for user authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Admin API Key for dashboard access
ADMIN_API_KEY=admin-test-key

# === GOOGLE CLOUD / VEO API CONFIGURATION ===
# Google Cloud Project ID (required for VEO API)
GOOGLE_CLOUD_PROJECT=ai-dynamic-painting

# Google Cloud Region (us-central1 recommended for VEO API)
GOOGLE_CLOUD_LOCATION=us-central1

# Path to Google Cloud Service Account Key (JSON file)
# Alternative: Use `gcloud auth application-default login` instead
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# VEO API Configuration
VEO_MODEL_NAME=veo-2-1024p-preview  # or veo-001, imagen-3.0-generate-001
VEO_DEFAULT_DURATION=5  # seconds (5-30 for VEO)
VEO_MAX_CONCURRENT_REQUESTS=3

# === COST CONTROL CONFIGURATION ===
# Daily budget limit in USD
DAILY_BUDGET_LIMIT=10.00

# Monthly budget limit in USD
MONTHLY_BUDGET_LIMIT=100.00

# Cost per VEO generation (approximate, in USD)
VEO_COST_PER_GENERATION=0.50

# Enable cost alerts
ENABLE_COST_ALERTS=true

# === HARDWARE INTEGRATION ===
# M5STACK Configuration
M5STACK_API_ENDPOINT=http://192.168.1.100:8080
M5STACK_TIMEOUT=5.0

# Raspberry Pi Configuration
RPI_DISPLAY_RESOLUTION=1920x1080
RPI_VIDEO_OUTPUT_PATH=/home/pi/videos/current

# === DEVELOPMENT SETTINGS ===
# Enable debug mode (development only)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable API documentation (Swagger UI)
ENABLE_DOCS=true

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# === EXTERNAL APIS ===
# Weather API Key (if using weather integration)
WEATHER_API_KEY=your-weather-api-key

# === REDIS/CELERY CONFIGURATION (for task scheduling) ===
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === MONITORING AND METRICS ===
# Enable metrics collection
ENABLE_METRICS=true

# Metrics retention period (days)
METRICS_RETENTION_DAYS=30

# Health check endpoint
HEALTH_CHECK_ENABLED=true