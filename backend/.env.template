# AI Dynamic Painting System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# === Phase 1: Core System Configuration ===

# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database
DATABASE_URL=sqlite:///./database/videos.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# M5STACK Configuration
M5STACK_API_ENDPOINT=http://192.168.1.100:8080
M5STACK_TIMEOUT=5
M5STACK_RETRY_COUNT=3

# === Phase 2: AI Integration Configuration ===

# Google VEO API (Video Generation)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/veo-api-key.json
VEO_PROJECT_ID=your-project-id
VEO_LOCATION=us-central1
VEO_MODEL_NAME=veo-001-preview
VEO_API_QUOTA_PER_DAY=100
VEO_API_QUOTA_PER_MINUTE=10

# Weather API
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather
WEATHER_LOCATION=Tokyo,JP
WEATHER_UPDATE_INTERVAL=3600  # 1 hour in seconds

# AI Generation Settings
AI_GENERATION_INTERVAL=21600  # 6 hours in seconds
AI_PROMPT_MAX_LENGTH=500
AI_VIDEO_DURATION_SECONDS=30
AI_VIDEO_RESOLUTION=1920x1080
AI_VIDEO_FPS=30

# AI Learning System
AI_LEARNING_ENABLED=true
AI_LEARNING_BATCH_SIZE=10
AI_LEARNING_UPDATE_INTERVAL=86400  # 24 hours
AI_PREFERENCE_WEIGHT_GOOD=1.0
AI_PREFERENCE_WEIGHT_BAD=-1.0
AI_PREFERENCE_WEIGHT_SKIP=-0.5

# Scheduling Configuration
SCHEDULER_TIMEZONE=Asia/Tokyo
SCHEDULER_MORNING_TIME=06:00
SCHEDULER_AFTERNOON_TIME=12:00
SCHEDULER_EVENING_TIME=18:00
SCHEDULER_NIGHT_TIME=22:00

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Cost Management
MAX_MONTHLY_API_COST_USD=50
COST_WARNING_THRESHOLD=0.8
COST_ALERT_EMAIL=admin@example.com

# Performance Settings
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600  # 1 hour
AI_PARALLEL_GENERATION=false
AI_MAX_RETRIES=3
AI_RETRY_DELAY=60  # seconds

# Monitoring
AI_METRICS_ENABLED=true
AI_METRICS_EXPORT_INTERVAL=300  # 5 minutes
AI_HEALTH_CHECK_INTERVAL=60  # 1 minute

# Feature Flags
FEATURE_AI_GENERATION=true
FEATURE_WEATHER_INTEGRATION=true
FEATURE_USER_LEARNING=true
FEATURE_SCHEDULED_GENERATION=true
FEATURE_COST_MANAGEMENT=true